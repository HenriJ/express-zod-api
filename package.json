{
  "private": true,
  "workspaces": [
    "express-zod-api",
    "example",
    "integration-test",
    "esm-test",
    "compatibility-test"
  ],
  "scripts": {
    "start": "yarn workspace example start",
    "build": "yarn build:package && yarn build:assets && yarn build:tests",
    "build:package": "yarn workspace express-zod-api build",
    "build:logo": "node -r @swc-node/register tools/startup-logo.ts",
    "build:assets": "yarn build:example && yarn build:license",
    "build:example": "yarn workspace example build",
    "build:license": "node -r @swc-node/register tools/license.ts",
    "build:tests": "yarn build:int && yarn build:esm",
    "build:int": "node -r @swc-node/register tools/integration-test.ts",
    "build:esm": "node -r @swc-node/register tools/esm-test.ts",
    "test": "yarn test:package && yarn test:example",
    "test:package": "yarn workspace express-zod-api test",
    "test:example": "yarn workspace example test",
    "test:int": "yarn workspace integration-test test",
    "test:952": "yarn workspace integration-test issue952",
    "test:esm": "yarn workspace esm-test test",
    "test:compat": "yarn workspace compatibility-test test",
    "lint": "eslint express-zod-api/src example *test && yarn prettier *.md --check",
    "mdfix": "prettier *.md --write",
    "install_hooks": "husky install",
    "precommit": "yarn build && yarn lint && yarn test && git add example/example.swagger.yaml example/example.client.ts ./LICENSE express-zod-api/coverage.svg"
  },
  "devDependencies": {
    "@swc-node/register": "^1.6.8",
    "@swc/core": "^1.3.100",
    "@tsconfig/node18": "^18.2.2",
    "@typescript-eslint/eslint-plugin": "^6.6.0",
    "@typescript-eslint/parser": "^6.6.0",
    "eslint": "^8.48.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.1.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-unicorn": "^49.0.0",
    "express": "^4.18.2",
    "http-errors": "^2.0.0",
    "prettier": "3.1.0",
    "typescript": "^5.3.2",
    "zod": "^3.22.4"
  }
}
